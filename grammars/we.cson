'scopeName': 'source.we'
'comment': 'Weex Syntax: version 0.1'
'fileTypes': [
	'we',
]

'firstLineMatch': '\\A#!.*?\\bweex\\b'
'name': 'Weex'

'patterns': [
	{
		# template
		'begin': '({{)'
