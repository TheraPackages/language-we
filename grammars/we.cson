				# 	}
				# ]

				# 'begin': '(?:\\s*(\\w*)\\s*(\\()(?:\\w*)(\\))\\s*)|(\\s*\\w*\\s*)'
				# 'beginCaptures':
				# 	'1':
				# 		'name': 'punctuation.definition.weextemplate.method-name'
				# 	'2':
				# 		'name': 'punctuation.definition.weextemplate.method-brace'
				# 	'3':
				# 		'name': 'punctuation.definition.weextemplate.method-brace'
