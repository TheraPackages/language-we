			'1':
				'name': 'punctuation.definition.weextemplate'
		'end': '(}})'
		'endCaptures':
			'1':
				'name': 'punctuation.definition.weextemplate'
		'name': 'source.js.embedded'
		'patterns': [
			{
				'include': 'source.js'
